javascript:
  var treeData = #{tree_data.to_json.html_safe};
  $('a.cc-close-reveal-modal').click(function () {
    $(this).parent().foundation('reveal', 'close');
    var tree = $("#treetable").fancytree("getTree");
    var d = tree.toDict(true);
    var send_data = JSON.stringify({ id: #{customer.id}, tree_data: d});
    jQuery.ajax({
      type: "POST",
      url: "#{add_universal_questions_admin_customer_path(customer).to_s}",
      dataType: "json",
      contentType: "application/json; charset=utf-8",
      data: send_data,
      traditional: true,
      success: function (data) {
        window.location.href = "#{edit_admin_customer_path(customer).to_s}#questions";
        location.reload();
      }
    });
  });
